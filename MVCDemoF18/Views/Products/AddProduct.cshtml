@model Product
@{
    ViewData["Title"] = "AddProduct";
}

<h2>Add Product</h2>

<form asp-action="AddProduct" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-5">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-5">
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-sm-2 control-label"></label>
        <div class="col-sm-5">
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price"></span>

        </div>
    </div>

    <div class="form-group">
        <label asp-for="Category" class="col-sm-2 control-label"></label>
        <div class="col-sm-5">
            <input asp-for="Category" class="form-control" />
        </div>
    </div>
    <div class="col-sm-offset-2">
        <input type="submit" value="Submit" class="btn btn-info" />
        <a asp-action="Index" class="btn btn-warning">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
